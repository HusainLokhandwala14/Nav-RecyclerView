<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="com.example.navlayout.fragment.Home"
        android:label="Home"

         tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_home2_to_firstFragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_home2_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.navlayout.fragment.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/fragment_first"/>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.navlayout.fragment.SecondFragment"
        android:label="SecondFragment" />
</navigation>